# =================================
# PRODUCTION ENVIRONMENT
# =================================
NODE_ENV=production
PORT=3000
API_PREFIX=api/v1

# =================================
# SUPABASE CONFIGURATION (PROD)
# =================================
SUPABASE_URL=${SUPABASE_URL}
SUPABASE_ANON_KEY=${SUPABASE_ANON_KEY}
SUPABASE_SERVICE_ROLE_KEY=${SUPABASE_SERVICE_ROLE_KEY}

# =================================
# JWT CONFIGURATION (PROD)
# =================================
JWT_SECRET=${JWT_SECRET}
JWT_EXPIRATION_TIME=1d
JWT_REFRESH_SECRET=${JWT_REFRESH_SECRET}
JWT_REFRESH_EXPIRATION_TIME=7d

# =================================
# DATABASE CONFIGURATION (PROD)
# =================================
DATABASE_URL=${DATABASE_URL}
DB_HOST=${DB_HOST}
DB_PORT=${DB_PORT}
DB_USERNAME=${DB_USERNAME}
DB_PASSWORD=${DB_PASSWORD}
DB_NAME=${DB_NAME}

# =================================
# CORS CONFIGURATION (PROD)
# =================================
FRONTEND_URL=${FRONTEND_URL}
ALLOWED_ORIGINS=${ALLOWED_ORIGINS}

# =================================
# RATE LIMITING (PROD - Strict)
# =================================
RATE_LIMIT_TTL=60
RATE_LIMIT_LIMIT=50

# =================================
# EMAIL CONFIGURATION (PROD)
# =================================
SMTP_HOST=${SMTP_HOST}
SMTP_PORT=${SMTP_PORT}
SMTP_SECURE=true
SMTP_USER=${SMTP_USER}
SMTP_PASS=${SMTP_PASS}

# =================================
# FILE UPLOAD CONFIGURATION (PROD)
# =================================
MAX_FILE_SIZE=10485760
UPLOAD_DESTINATION=${UPLOAD_DESTINATION}

# =================================
# LOGGING CONFIGURATION (PROD)
# =================================
LOG_LEVEL=error
LOG_FILE_PATH=${LOG_FILE_PATH}

# =================================
# REDIS CONFIGURATION (PROD)
# =================================
REDIS_HOST=${REDIS_HOST}
REDIS_PORT=${REDIS_PORT}
REDIS_PASSWORD=${REDIS_PASSWORD}

# =================================
# SENTRY CONFIGURATION (PROD)
# =================================
SENTRY_DSN=${SENTRY_DSN}

# =================================
# ENCRYPTION & SECURITY (PROD)
# =================================
ENCRYPTION_KEY=${ENCRYPTION_KEY}
BCRYPT_ROUNDS=14

# =================================
# BUSINESS CONFIGURATION (PROD)
# =================================
DEFAULT_CURRENCY=INR
DECIMAL_PRECISION=2
FISCAL_YEAR_START_MONTH=1
