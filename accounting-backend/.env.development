# =================================
# DEVELOPMENT ENVIRONMENT
# =================================
NODE_ENV=development
PORT=3000
API_PREFIX=api/v1

# =================================
# SUPABASE CONFIGURATION (DEV)
# =================================
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your_development_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_development_service_role_key

# =================================
# JWT CONFIGURATION (DEV)
# =================================
JWT_SECRET=dev_jwt_secret_key_that_is_at_least_32_characters_long_for_security
JWT_EXPIRATION_TIME=7d
JWT_REFRESH_SECRET=dev_refresh_jwt_secret_key_that_is_also_32_characters_long_minimum
JWT_REFRESH_EXPIRATION_TIME=30d

# =================================
# DATABASE CONFIGURATION (DEV)
# =================================
DATABASE_URL=postgresql://postgres:password@localhost:5432/accounting_dev
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=password
DB_NAME=accounting_dev

# =================================
# CORS CONFIGURATION (DEV)
# =================================
FRONTEND_URL=http://localhost:5173
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000,http://localhost:3001

# =================================
# RATE LIMITING (DEV - More Relaxed)
# =================================
RATE_LIMIT_TTL=60
RATE_LIMIT_LIMIT=1000

# =================================
# EMAIL CONFIGURATION (DEV)
# =================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=dev@yourcompany.com
SMTP_PASS=dev_app_password

# =================================
# FILE UPLOAD CONFIGURATION (DEV)
# =================================
MAX_FILE_SIZE=20971520
UPLOAD_DESTINATION=./uploads/dev

# =================================
# LOGGING CONFIGURATION (DEV)
# =================================
LOG_LEVEL=debug
LOG_FILE_PATH=./logs/dev

# =================================
# REDIS CONFIGURATION (DEV)
# =================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# =================================
# BUSINESS CONFIGURATION (DEV)
# =================================
DEFAULT_CURRENCY=USD
DECIMAL_PRECISION=4
FISCAL_YEAR_START_MONTH=1
